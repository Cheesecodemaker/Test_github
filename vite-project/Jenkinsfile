pipeline {
    agent any

    tools {
        nodejs 'NodeJS-a8'
    }

    stages {
        stage('Clone Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Cheesecodemaker/Test_github.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('vite-project') {
                    bat 'npm install'
                }
            }
        }

        stage('Build React App') {
            steps {
                dir('vite-project') {
                    bat 'npm run build'
                }
            }
        }
    }

    post {
        success {
            echo 'React build successful ğŸ‰'
        }
        failure {
            echo 'Build failed âŒ'
        }
    }
}